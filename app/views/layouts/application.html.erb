<!DOCTYPE html>
<html>
  <head>
    <title>Campgo</title>
    <meta name="viewport" content="width=device-width,initial-scale=1, maximum-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link href="https://fonts.googleapis.com/css2?family=Lobster&family=M+PLUS+Rounded+1c:wght@700&family=Poppins:ital,wght@1,200&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Lobster&family=M+PLUS+Rounded+1c:wght@700&family=PT+Serif:ital@1&family=Poppins:ital,wght@1,200&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Lobster&family=M+PLUS+Rounded+1c:wght@700&family=PT+Serif:ital@1&family=Poppins:ital,wght@1,200&family=Shadows+Into+Light&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Lobster&family=M+PLUS+Rounded+1c:wght@700&family=PT+Serif:ital@1&family=Poppins:ital,wght@1,200&family=Shadows+Into+Light&family=Zen+Maru+Gothic:wght@300;400;500&display=swap" rel="stylesheet">
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-light nav-color">
        <div class="container">
          <a class="navbar-brand p-3" href="/"><span class="main_title">campgo</span></a>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <!--justify-content-endでヘッダーの右寄せ-->
          <div class=" navbar-collapse collapse justify-content-end" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">
              <% if admin_signed_in? %>
                <li class="nav-item">
                  <%= link_to '会員一覧', admin_users_path, class: 'nav-link' %>
                </li>
                <li>
                  <%= link_to '投稿一覧', admin_posts_path, class: 'nav-link' %>
                </li>
                <li>
                  <%= link_to 'キャンプ一覧', admin_camps_path, class: 'nav-link'%>
                </li>
                <li>
                  <%= link_to 'チェックリスト編集', admin_categories_path, class: 'nav-link' %>
                </li>
                <li>
                  <%= link_to 'ログアウト', destroy_admin_session_path, method: :delete, class: 'nav-link' %>
                </li>
              <% elsif user_signed_in? %>
                <li>
                  <%= link_to ' マイページ', user_path(current_user.id), class: 'nav-link' %>
                </li>
                <li>
                  <%= link_to 'キャンプ作成', new_camp_path, class: 'nav-link' %>
                </li>
                <li>
                  <%= link_to '投稿一覧', posts_path, class: 'nav-link' %>
                </li>
                <li>
                  <%= link_to 'ログアウト', destroy_user_session_path, method: :delete, class: 'nav-link'  %>
                </li>

              <% else %>
                <li>
                  <%= link_to '新規登録', new_user_registration_path, class: 'nav-link' %>
                </li>
                <li>
                  <%= link_to 'ログイン', new_user_session_path, class: 'nav-link'%>
                </li>
                <!--<li>-->
                <!--  <%#= link_to 'ゲストログイン（閲覧用）', users_guest_sign_in_path, method: :post, class: 'nav-link' do %>-->
                <!--    ゲストログイン-->
                <!--  <%# end %>-->
                <!--</li>-->
              <% end %>
            </ul>
          </div>
        </div>
      </nav>
    </header>
    <main>


      <%= yield %>
    </main>

    <footer></footer>

  </body>

</html>
