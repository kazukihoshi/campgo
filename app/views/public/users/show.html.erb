<div class="container">
  <div class="row">
    <div class="col-12 text-center">
      <h2>マイページ</h2>
    </div>
  </div>

  <div class="text-success">
    <% if flash[:notice] %>
       <p id="notice text-success">
         <%= flash[:notice] %>
       </p>
    <% end %>
  </div>


  <div class="row">
    <div class="col">
      <%#= image_tag @user.get_background_image(100,100) %>
    </div>
  </div>

  <div class="row">
    <div class="col-12 text-center">
      <%= image_tag @user.get_profile_image(100,100) %>
    </div>
  </div>

  <div class="row">
    <div class="col-12 text-center">
      <%= @user.name %>
    </div>
  </div>

  <div class="row">
    <div class="col-12 d-flex justify-content-around">
      <%= link_to "記事投稿", new_post_path %>

      <%= link_to "いいね一覧", favorites_path %>

      <%= link_to "マイページ編集", edit_user_path(@user.id) %>

      <%= link_to "キャンプ", camps_path %>
    </div>
  </div>

  <!--<div class="card-list-container py-5">-->
    <!--<div class="row">-->
      <% @posts.each do |post| %>
      <div class="card-deck">
        <div class="col-12  d-flex justify-content-around">
          <div class="card">

              <div class="card-image-top">
                <%= link_to post_path(post.id) do %>
                  <% if post.post_images.attached? %>
                    <!--<div style="height:180, width:130">-->
                      <!--複数の写真の一枚目の取得-->
                      <%= image_tag post.post_images.first.variant(resize: "180x130") %>
                    <!--</div>-->
                  <% else %>
                    <%= image_tag 'no_image_yoko.jpeg', size: "180×130" %>
                  <% end %>
                <% end %>
              </div>
              <div class="card-body">
                <div class="card-title">
                  <%= link_to(post_path(post.id), class:"text-dark") do %>
                    <strong><i class="far fa-flag"></i><span> <%= post.title %></span></strong>
                  <% end %>
                </div>
                <div class="card-tag">
                  タグ：
                  <% post.tags.pluck(:name).each do |tag_name| %>
                    <%= tag_name %>
                  <% end %>
                </div>
                <div class="card-body">
                  <span><i class="fas fa-user"></i> By <%= post.user.name %> ｜ </span>
                  <!--コメント数の表示-->
                  <p class="caption"><%= "#{post.comments.count} コメント" %></p>
                </div>
              </div>

          </div>
        </div>
      </div>
      <% end %>
    <!--</div>-->

      <%#= paginate @posts %>
    </div>

</div>

