<div class="container">
  <div class="row">
    <div class="col-10 offset-1 text-success">
      <% if flash[:notice] %>
         <p id="notice text-success">
           <%= flash[:notice] %>
         </p>
      <% end %>
    </div>
  </div>

  <div class="row">
    <div class="col-10 offset-1">
        <h2 class="title">キャンプの予定</h2>
    </div>
  </div>


  <div class="row">
    <div class="col-lg-4 col-md-6 col-sm-8 offset-1">
      <table class="table">
        <tbody>
          <tr>
            <th>日程</th>
            <td><%= @camp.schedule %></td>
          </tr>
          <tr>
            <th>場所</th>
            <td><%= @camp.camp_site %></td>
          </tr>
          <tr>
            <th>人数</th>
            <td><%= @camp.number_of_people %>人</td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>


  <%= render 'public/checklists/camp_for_index', checklists: @checklists %>


</div>

<div class="container">
  <div class="row">
    <div class="col-4 offset-1">
      <%= link_to "編集", edit_camp_path(@camp.id), class: "btn btn-outline-success" %>
    </div>
  </div>
</div>

