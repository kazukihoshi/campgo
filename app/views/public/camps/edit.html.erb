<div class="container">
  <div class="row">
    <div class="col-6">
      <h4>キャンプに行く</h4>
    </div>
  </div>

  <%= form_with model: @camp, url: camp_path(@camp.id), local: true, method: :PATCH do |f| %>
  <div class="row">
    <div class="col-3">
      <%= f.label :schedule, "日程" %>
    </div>
    <div class="col-3">
      <%= f.date_field :schedule %>
    </div>
  </div>

  <div class="row">
    <div class="col-3">
      <%= f.label :camp_site, "キャンプ場" %>
    </div>
    <div class="col-3">
      <%= f.text_field :camp_site %>
    </div>
  </div>

　<div class="row">
　  <div class="col-3">
　    <%= f.label :number_of_people, "人数" %>
　  </div>
　  <div class="col-3">
　    <%= f.select :number_of_people, *[1..5] %>
　  </div>
　</div>

  <div class="row">
    <div class="col-3">
      <%= f.submit "保存" %>
    </div>
  </div>

  <% end %>
</div>