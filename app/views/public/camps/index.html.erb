<div class="container">
  <div class="row">
    <div class="col-10 offset-1 text-success">
      <% if flash[:notice] %>
         <p id="notice text-success">
           <%= flash[:notice] %>
         </p>
      <% end %>
    </div>
  </div>


  <div class="row">
    <div class="col-10 offset-1">
      <h2 class="title">マイキャンプ一覧</h2>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-6 col-sm-8 offset-1">
      <div class="table_area">
        <table class="scroll_table table">
          <thead>
            <tr>
              <th>日程</th>
              <th>作成日</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <% @camps.each do |camp| %>
            <tr>
              <td>
                <%= link_to camp_path(camp.id), class: "btn btn-outline-secondary" do %>
                  <%= camp.schedule %>
                <% end %>
              </td>
              <td>
                <%= l camp.created_at %>
              </td>
              <td>
                <%= link_to camp_path(camp), method: :delete, data: { confirm: "本当に削除してもよろしいですか?"} do %>
                  <!--削除ボタンをアイコンに変更-->
                  <strong><i class="fas fa-trash-alt"></i></strong>
                <% end %>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-6 col-sm-8 offset-1">
      <%= paginate @camps %>
    </div>
  </div>
</div>