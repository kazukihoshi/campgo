<div class="container">
  <div class="row">
    <div class="col-4 offset-2">
      <h4 class="title">キャンプ作成</h4>
    </div>
    <!--エラーメッセージのエラー-->
    <% if @camp.errors.any? %>
      <%= @camp.errors.count %>件のエラーが発生しました
      <ul>
        <% @camp.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    <% end %>
  </div>

  <%= form_with model: @camp, url: camps_path, local: true, method: :POST do |f| %>
  <div class="row field">
    <div class="col-8 offset-2">
      <%= f.label :schedule, "日程" %><br>
      <%= f.date_field :schedule %>
    </div>
  </div>

  <div class="row field">
    <div class="col-8 offset-2">
      <%= f.label :camp_site, "キャンプ場" %>
      <%= f.text_field :camp_site %>
    </div>
  </div>

　<div class="row field">
　  <div class="col-8 offset-2">
　    <%= f.label :number_of_people, "人数" %><br>
　    <%= f.select :number_of_people, *[1..5] %>
　  </div>
　</div>

  <div class="row button">
    <div class="col-8 offset-2">
      <%= f.submit "チェックリスト作成" %>
    </div>
  </div>

  <% end %>
</div>