<div class="container">
  <div class="col-4">
    <% if @checklist.errors.any? %>
      <div id="error_explanation">
        <h3><%= @checklist.errors.count %>件のエラーが発生しました</h3>
          <ul>
            <% @checklist.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
      </div>
    <% end %>
  </div>

  <div class="row">
    <div class="col-10 offset-1">
      <h2 class="title">チェックリスト編集</h2>
    </div>
  </div>

    <%= form_with model: @checklist, url: user_checklist_path(@user, @checklist), local: true, method: :PATCH do |f| %>

  <!--@checklist ⇨ checklistに変更、@camp⇨camp-->
      <div class="row form-group">
        <div class="col-10 offset-1">
          <div class="field">
            <%= f.label :checklist_name, "アイテム名" %><br>
            <%= f.text_field :checklist_name,placeholder: "アイテム名", class: "post_form" %>
          </div>
          <div class="field">
            <%= f.label :comment, "コメント" %><br>
            <div class="post_area_wrapper">
              <%= f.text_area :comment, placeholder: "コメント", class: "post_area" %>
            </div>
          </div>
          <%#= f.fields_for :checklist_manages do |cm| %>
            <%#= cm.hidden_field :camp_id, value: camp.id %>
            <%#= cm.hidden_field :user_id, value: current_user.id %>
          <%# end %>

          <div class="field">
             <%= f.select :category_id, options_from_collection_for_select(Category.all, :id, :category_name) %>
           </div>
          <div class="actions">
            <%= f.submit '更新',class: "btn btn-outline-primary" %>
            <%=link_to "戻る", :back, class: "btn btn-outline-secondary" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>