<div class="row">
  <div class="col-4">
    <% if checklist.errors.any? %>
      <div id="error_explanation">
        <h3><%= checklist.errors.count %>件のエラーが発生しました</h3>
          <ul>
            <% checklist.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
      </div>
    <% end %>
  </div>
</div>

<div class="row">
  <%= form_with model: checklist, url: camp_checklists_path(camp), local: true, method: :POST do |f| %>

  <!--@checklist ⇨ checklistに変更、@camp⇨camp-->
        <div class="row">
          <div class="col-3">
            <div class="form-group mr-5 mt-5">
              <%= f.text_field :checklist_name,placeholder: "アイテム名", class: "form-control" %>
            </div>
          </div>

          <div class="col-4">
            <div class="form-group mr-5 mt-5">
              <%= f.text_field :comment, placeholder: "コメント", class: "form-control" %>
            </div>
          </div>

          <%= f.fields_for :checklist_manages do |cm| %>
            <%= cm.hidden_field :camp_id, value: camp.id %>
            <%= cm.hidden_field :user_id, value: current_user.id %>
          <% end %>

          <div class="col-2">
            <div class="form-group  mr-5 mt-5">
               <%= f.select :category_id, options_from_collection_for_select(Category.all, :id, :category_name) %>
             </div>
          </div>

          <%#= f.collection_check_boxes(:category_id, Category.all, :id, :category_name, include_hidden: false) do |category| %>

              <!--<div class='form-group'>
                  <%#= category.label class: 'form-check-label' do %>
                      <%#= category.check_box class: 'form-check-input' %>
                      <%#= category.text %>
                  <%# end %>
              </div>-->
          <%# end %>

          <div class="col-1">
            <div class="form-group mr-5 mt-5">
                <%= f.submit '追加',class: "btn btn-outline-primary" %>
            </div>
          </div>
        </div>
  <% end %>
</div>