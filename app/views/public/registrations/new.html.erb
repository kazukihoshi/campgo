<div class="container">
  <div class="row">
    <div class="col-10 offset-1">
      <h2 class="title">新規登録</h2>
    </div>
  </div>
  <div class="row">
    <div class="col-10 offset-1">
      <%= render "public/shared/error_messages", resource: resource %>
    </div>
  </div>

  <%= form_with model: resource, url: registration_path(resource_name), method: :POST do |f| %>
    <%#= render "public/shared/error_messages", resource: resource %>
    <div class="row signin-form">
      <div class="col-10 offset-1">
        <div class="field">
          <%= f.label :name %>

            <br>

          <%= f.text_field :name, size: "40x20" %>
        </div>

        <div class="field">
          <%= f.label :email %>

            <br>

          <%= f.email_field :email, autofocus: true, autocomplete: "email", size: "40x20" %>
        </div>

        <div class="field">
          <%= f.label :password, "パスワード" %>

            <br>

          <%= f.password_field :password, autocomplete: "new-password", size: "40x20" %>
        </div>

        <div class="field">
          <%= f.label :password_confirmation %>

            <br>

          <%= f.password_field :password_confirmation, autocomplete: "new-password", size: "40x20" %>
        </div>

        <div class="actions">
          <%= f.submit "sign in",class: "btn btn-outline-primary" %>
        </div>



        <div class="actions" style="margin-top:1rem;">
          <%= render "public/shared/links" %>
        </div>
      </div>
    </div>
  <% end %>
  </div>
</div>





