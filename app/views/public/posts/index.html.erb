<div class="card-list-container py-5">
  <% @posts.each do |post| %>
  <div class="card w-50 mx-auto mt-4 shadow-lg">
    <%= link_to post_path(post.id) do %>
      <% if post.post_images.attached? %>
        <%= image_tag post.image, size: "180x130" %>
      <% else %>
        <%= image_tag 'no_image_yoko.jpeg', size: "180x130" %>
      <% end %>
    <% end %>
    <div class="card-body">
      <div class="row">
        <div class="col-2">
          <%= image_tag post.user.get_profile_image(100,100), class:"mt-3 rounded-circle"; %>
        </div>
        <div class="col-10">
          <p class="card-title">
            <%= link_to(post_path(post.id), class:"text-dark") do %>
              <strong><i class="far fa-flag"></i><span> <%= post.title %></span></strong>
            <% end %>
          </p>
          <!--<p class="card-text">記事：<%#= post.post %></p>-->
          <span><i class="fas fa-user"></i> By <%= post.user_id %> ｜ </span>
          <span><%#= link_to "#{post.comments.comment.count} コメント", post_path(post.id), class:"text-dark" %></span>
        </div>
      </div>
    </div>
  </div>
  <% end %>
  <%#= paginate post_images %>
</div>
