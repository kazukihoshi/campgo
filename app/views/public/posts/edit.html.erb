<div class="container">
  <div class="row">
    <div class="col-10 offset-1">
      <h2 class="title">投稿編集</h2>
    </div>
  </div>

  <div class="row">
    <div class="col-10 offset-1">
      <% if @post.errors.any? %>
        <div id="error_explanation">
          <h3><%= @post.errors.count %>件のエラーが発生しました</h3>
            <ul>
              <% @post.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
        </div>
      <% end %>
    </div>
  </div>

  <%= form_with model: @post, url: post_path(@post), local: true, method: :PATCH do |f| %>
  <div class="row form-group my-3">
    <div class="col-10 offset-1">
      <div class="field">
        <%= f.label :camp_site, "キャンプ場" %><br>
        <%= f.text_field :camp_site, class: "post_form" %>
      </div>

      <div class="field">
        <%= f.label :title, "タイトル" %><br>
        <%= f.text_field :title,class: "post_form" %>
      </div>

      <div class="field">
        <%= f.label :post, "投稿" %>
        <%= f.text_field :post,class: "post_area" %>
      </div>

      <div class="field">
        <%= f.label :post_images, "画像" %><br>
        <%= f.file_field :post_images, accept: "image/*", multiple: true%>
      </div>

      <div class="field">
        <%= f.label :tag, "タグ" %><br>
        <!--postのカラムではないためf.を外す-->
        <%= text_field_tag :tag, @post.tags.pluck(:name),placeholder: "スペースで区切ることで複数登録できます", class: "post_form" %>
        <%#= hidden_field_tag :tag, @post.tags  %>
      </div>

      <div class="actions">
        <%= f.submit "更新", class: "btn btn-outline-primary" %>
      </div>
    </div>
  </div>
  <% end %>
</div>


