    <!--          <%#= link_to "削除", admin_post_comment_path(@post.id, comment.id), method: :delete, class: "btn-sm btn-danger" %>-->
    <!--        </div>-->
    <!--  <%# end %>-->
    <!--</div>-->

    <div class="row">
      <div class="col-10 offset-1 post_content">
        <%= link_to '削除', admin_post_path(@post.id), method: :delete, "data-confirm"=>"本当に消しますか？", class: "btn btn-outline-danger" %>
        <%= link_to '一覧へ', posts_path, class: "btn btn-outline-secondary"%>
      </div>
    </div>

</div>

