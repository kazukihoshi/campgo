<div class="container">
  <div class="row">
    <div class="col-10 offset-1 post_content">
      <h2 class="title"><%= @post.title %></div>
    </div>
  </div>

  <div class="row">
    <div class="col-10 offset-1 post_content">
      <% if @post.post_images.attached? %>
        <% @post.post_images.each do |post_image| %>
           <div style="height:180, width:130">
          <%= image_tag post_image.variant(resize: "100x130^") %>
          </div>
        <% end %>
      <% else %>
        <%= image_tag 'no_image_yoko.jpeg', size: "180x130" %>
      <% end %>

    </div>

    <div class="row">
      <div class="col-10 offset-1 post_content">
        <%= @post.post %>
      </div>
    </div>

    <div class="row">
      <!--each文で複数のものの中から1つずつ取得する-->
      <% @post.tags.each do |tag|%>
        <div class="col-10 offset-1 post_content">
          <%= tag.name %>
          <%= link_to "削除", admin_post_tag_path(@post.id, tag.id), method: :delete,"data-confirm"=>"本当に消しますか？", class: "btn-sm btn-danger" %>
        </div>
      <% end %>
    </div>

    <%= render 'admin/comments/comment_show', comments: @comments, post: @post %>
