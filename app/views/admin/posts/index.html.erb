<div class="container">
  <div class="row">
    <div class="col-10 offset-1">
      <h2 class="title">投稿一覧</h2>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-6 col-sm-8 offset-1">
      <div class="table_area">
        <table class="scroll_table table">
          <thead>
            <tr>
              <th>投稿ID</th>
              <th>名前</th>
              <th>タイトル</th>
              <th>投稿日</th>
            </tr>
          </thead>
          <tbody>
            <% @posts.each do |post| %>
            <tr>
              <td>
                <%= link_to admin_post_path(post) do %>
                  <%= post.id %>
                <% end %>
              </td>
              <td>
                <%= post.user.name %>
              </td>
              <td>
                <%= post.title %>
              </td>
              <td>
                <%= l post.created_at %>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-6 col-sm-8 offset-1">
      <%= paginate @posts %>
    </div>
  </div>
</div>