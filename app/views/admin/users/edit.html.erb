<div class="container">
  <div class="row">
    <div class="col-3">
      <%= @user.name %>さんの情報編集
    </div>
  </div>

　<%= form_with model: @user, url: admin_user_path(@user.id), local: true, method: :patch do |f| %>


    <div class="form-group row my-3">
        <%= f.label :user_id, "会員ID",class: "col-sm-2 col-form-label" %>
        <div class="col-sm-10">
           <%= @user.id %>
        </div>
      </div>

      <div class="form-group row my-3">
        <%= f.label :name, "氏名",class: "col-sm-2 col-form-label" %>
        <div class="col-sm-3">
          <%= f.text_field :name, class: "form-control" %>
        </div>
      </div>

      <div class="form-group row mr-5">
        <%= f.label :email, "メールアドレス",class: "col-sm-2 col-form-label" %>
        <div class="col-sm-10">
          <%= f.text_field :email,class: "form-control" %>
        </div>
      </div>


      <div class="form-group row mr-5">
        <%= f.label :password, "パスワード",class: "col-sm-2 col-form-label" %>
        <div class="col-sm-3">
          <%= f.text_field :password, class: "form-control" %>
        </div>
      </div>

      <div class="form-group row mr-5">
        <%= f.label :is_delete, "会員ステータス",class: "col-sm-2 col-form-label" %>
        <%= f.radio_button :is_delete, false  %>
        <%= f.label :is_delete, "有効", value: false,class: "col-sm-2 col-form-label" %>
        <%= f.radio_button :is_delete, true %>
        <%= f.label :is_delete, "退会", value: true,class: "col-sm-2 col-form-label" %>
        <%#= f.radio_button :is_active, "退会" %>
        <%#= f.label :is_active, "退会", value: "退会",class: "col-sm-2 col-form-label" %>
　    </div>

　    <div class="form-group row justify-content-center">
        <div class="col-sm-2">
          <%= f.submit '変更を保存', class: "btn btn-success" %>
          <%= link_to '戻る', admin_users_path, class: "btn btn-success" %>
        </div>
      </div>

  <% end %>

</div>