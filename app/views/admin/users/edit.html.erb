<div class="container">
  <div class="row">
    <div class="col-4 offset-1">
      <h2 class="title"><%= @user.name %>さんの情報編集</h2>
    </div>
  </div>

　<%= form_with model: @user, url: admin_user_path(@user.id), local: true, method: :patch do |f| %>
    <div class="form-group row my-3">
      <div class="col-10 offset-1">
        <%= f.label :user_id, "会員ID",class: "form-label" %>
        <%= @user.id %>
      </div>
    </div>

      <div class="form-group row my-3">
        <div class="col-10 offset-1">
          <%= f.label :name, "氏名",class: "form-label" %>
          <%= f.text_field :name, class: "form-control" %>
        </div>
      </div>

      <div class="form-group row my-3">
        <div class="col-10 offset-1">
          <%= f.label :email, "メールアドレス",class: "form-label" %>
           <%= f.text_field :email,class: "form-control" %>
        </div>
      </div>


      <div class="form-group row my-3">
        <div class="col-10 offset-1">
          <%= f.label :password, "パスワード",class: "form-label" %>
          <%= f.text_field :password, class: "form-control" %>
        </div>
      </div>

      <div class="form-group row my-3">
        <div class="col-10 offset-1">
          <%= f.label :is_delete, "会員ステータス",class: "form-label" %>
          <div class="status">
            <%= f.radio_button :is_delete, false  %>
            <%= f.label :is_delete, "有効", value: false,class: "form-label" %>
            <%= f.radio_button :is_delete, true %>
            <%= f.label :is_delete, "退会", value: true,class: "form-label" %>
          </div>
        </div>
　    </div>

　    <div class="form-group row">
        <div class="col-10 offset-1">
          <%= f.submit '変更', class: "btn btn-outline-success" %>
          <%= link_to '戻る', admin_users_path, class: "btn btn-outline-secondary" %>
        </div>
      </div>
  <% end %>
</div>