<div class="container">
  <div class="row">
    <div class="col-10 offset-1">
      <h2 class="title">会員一覧</h2>
    </div>
  </div>

  <div class="row field">
    <div class="col-10 offset-1">
      <table class="table">
        <thead>
          <tr>
            <th>会員ID</th>
            <th>会員氏名</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
          <tr>
            <td>
              <%= link_to admin_user_path(user) do %>
                <%= user.id %>
              <% end %>
            </td>
            <td>
              <%= user.name %>
            </td>
            <td>
              <% if user.is_delete == false %>
                有効
              <% else %>
                退会
              <% end %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <%= paginate @users %>
</div>