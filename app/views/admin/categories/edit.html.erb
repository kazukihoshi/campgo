<div class="container">
  <div class="row">
    <div class="col-10 offset-1">
      <h2 class="title">編集</h2>
    </div>
  </div>

  <!--エラーメッセージ-->
  <div class="row">
    <div class="col-lg-4 col-sm-10 offset-1">
      <% if @category.errors.any? %>
        <div id="error_explanation">
          <h3><%= @category.errors.count %>件のエラーが発生しました</h3>
            <ul>
              <% @category.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
        </div>
      <% end %>
    </div>
  </div>


　<div class="row">
　  <div class="col-10 offset-1">
　    <%= form_with model: @category, url: admin_category_path, local: true, method: :PATCH do |f| %>
        <div class="row">
          <div class="col-4">
            <div class="form-group">
              <%= f.text_field :category_name, class: "form-control" %>
            </div>
          </div>
          <div class="col-4">
            <div class="form-group">
            　　<%= f.submit '更新', class: "btn btn-outline-success" %>
            　　<%= link_to '戻る', admin_categories_path, class: "btn btn-outline-secondary"%>
            </div>
          </div>
        </div>
      <% end %>
　  </div>
　</div>
</div>