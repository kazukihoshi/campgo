<div class="container">
  <div class="row">
    <div class="col-10 offset-1">
      <h2 class="title">カテゴリー一覧</h2>
    </div>
  </div>

  <%= form_with model: @category, url: admin_categories_destroy_all_path(@category.id), local: true, method: :DELETE do |f| %>
    <div class="form-group row">
      <div class="col-10 offset-1">

        <table class="table">
          <thead>
            <tr>
              <th>カテゴリー一覧</th>
              <!--<th colspan="1"></th>-->
              <th><%= f.submit '削除', data: { confirm: "本当に削除してもよろしいですか?"}, class: "btn btn-outline-danger" %></th>
            </tr>
          </thead>
          <tbody>
            <% @categories.each do |category| %>
              <tr>
                <td><%= check_box "deletes", category.id %>
                <%= category.category_name %></td>
                <td><%= link_to "編集", edit_admin_category_path(category.id), class: "btn btn-outline-primary" %></td>
                <td><%= link_to "チェックリスト", admin_category_checklists_path(category.id), class: "btn btn-outline-primary"%></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  <% end %>

  <%= form_with model: @category, url: admin_categories_path, local: true, method: :POST do |f| %>
    <div class="row">
      <div class="form-group col-3 offset-1">
          <%= f.text_field :category_name, placeholder: "カテゴリー名", class: "form-control" %>
      </div>
      <div class="col-1" style="margin-left:3rem;padding-left:1.5rem;">
        <%= f.submit '登録', class: "btn btn-outline-primary" %>
      </div>
    </div>
  <% end %>




</div>