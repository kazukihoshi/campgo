<div class="container">
  <div class="row">
    <div class="col-3">
      <h4>キャンプ一覧</h4>
    </div>
  </div>

  <table class="table">
    <thead>
      <tr>
        <th>名前</th>
        <th>キャンプID</th>
        <th>作成日</th>
      </tr>
    </thead>
    <tbody>
      <% @camps.each do |camp| %>
      <tr>
        <td>
          <%= link_to admin_camp_path(camp) do %>
            <%= camp.user.name %>
          <% end %>
        </td>
        <td>
          <%= camp.id %>
        </td>
        <td>
          <%= l camp.created_at %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>