<div class="container">
  <div class="row">
    <div class="col-4 offset-2">
      <h2 class="title">Admin Log in</h1>
    </div>

    <div class="row text-center signin-link login-form">
      <%= form_with model: @admin, url: new_admin_session_path do |f| %>
        <div class="field">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", size: "40x20" %>
        </div>
        <div class="field">
          <%= f.label :password %><br />
          <%= f.password_field :password, autocomplete: "current-password",size: "40x20" %>
        </div>
        <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>
        <div class="actions">
          <%= f.submit "Log in",class: "btn btn-info btn-block" %>
        </div>
      <% end %>
    </div>
  </div>
</div>



<%= render "admin/shared/links" %>

